<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tituloReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fideo Salsa"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imagenReceta"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fideosalsa"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tituloIngredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/ingredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 200g de fideos\n• 2 tomates maduros\n• 1/2 cebolla\n• 1 diente de ajo\n• Sal y pimienta al gusto\n• Aceite de oliva"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tituloPreparacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparación"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/pasosPreparacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Cocina los fideos según las instrucciones del paquete.\n2. Sofríe la cebolla y el ajo en aceite de oliva.\n3. Agrega los tomates picados y cocina hasta que se forme una salsa.\n4. Mezcla los fideos con la salsa y sirve."
            android:textSize="18sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
